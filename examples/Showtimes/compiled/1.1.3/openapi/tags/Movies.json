                    "required": true,
                    "content": {
                        "application\/mill.example.movie+json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "cast": {
                                        "description": "Array of cast members.",
                                        "items": {
                                            "type": "object",
                                            "properties": {
                                                "name": {
                                                    "description": "Cast member name.",
                                                    "example": "Natasha Hovey",
                                                    "type": "string"
